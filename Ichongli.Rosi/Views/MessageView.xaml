<UserControl x:Class="Ichongli.Rosi.Views.MessageView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" FontFamily="{StaticResource PhoneFontFamilyNormal}" FontSize="{StaticResource PhoneFontSizeNormal}" Foreground="{StaticResource PhoneForegroundBrush}">
    <Border CornerRadius="6" Background="#ffffff" VerticalAlignment="Center" Margin="32,0">
        <StackPanel>
            <TextBlock Style="{StaticResource PhoneTextTitle3Style}" TextWrapping="Wrap" Margin="12 24" Text="{Binding Text}" Foreground="#FF262626" />
            <Rectangle Height="1" Fill="#d8d8d8"/>
            <Button x:Name="Ok" Content="确定" Foreground="#FF262626" />
        </StackPanel>
    </Border>
</UserControl>